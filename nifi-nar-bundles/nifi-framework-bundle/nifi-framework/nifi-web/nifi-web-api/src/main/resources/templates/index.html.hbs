        <div class="section">
            <div class="section-header">
                <div class="title link">Versions</div>
                <div class="sub-title section-description">Manage versions of process groups</div>
                <div class="clear"></div>
            </div>
            <div id="version-endpoints" class="section-endpoints hidden"></div>
        </div>
        <div class="unorganized hidden">
            {{#each paths}}
                {{> endpoint}}
            {{/each}}
        </div>
        {{#each definitions}}
            {{> type}}
        {{/each}}
    </body>
